{
  "name": "amazon-seller-system",
  "version": "1.0.0",
  "description": "Amazon Seller Dashboard with SP-API and Ads API integration",
  "scripts": {
    "test:e2e": "node tests/e2e/test-complete-system.js",
    "test:e2e:headless": "cross-env HEADLESS=true node tests/e2e/test-complete-system.js",
    "test:e2e:windows": "run-e2e-tests.bat",
    "test:e2e:powershell": "powershell -ExecutionPolicy Bypass -File run-e2e-tests.ps1",
    "test:login": "node tests/e2e/test-login.js",
    "test:api": "node tests/e2e/test-api-integration.js",
    "backend:start": "cd amazon-unified-backend && npm run dev",
    "frontend:start": "cd lovable-frontend && npm run dev",
    "dev": "concurrently \"npm run backend:start\" \"npm run frontend:start\"",
    "sync:manual": "node scripts/sync/sync-all-real-data.js",
    "sync:schedule": "node scripts/sync/sync-scheduler-15min.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "puppeteer": "^24.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "node-fetch": "^2.7.0"
  }
}
