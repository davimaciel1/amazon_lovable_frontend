modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "jq", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Code Analysis"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd lovable-frontend && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd amazon-unified-backend && npm run dev"
waitForPort = 8080

[[workflows.workflow]]
name = "MCP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mcp-server && node server.js"
waitForPort = 8008

[[workflows.workflow]]
name = "MCP Code Analysis"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mcp-code-analysis-server && node server.js"
waitForPort = 6000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8008
externalPort = 8008

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd amazon-unified-backend && npm start & cd ../lovable-frontend && npm run preview"]
build = ["bash", "-c", "cd lovable-frontend && npm run build && cd ../amazon-unified-backend && npm run build"]
