{
  "name": "amazon-unified-backend",
  "version": "1.0.0",
  "description": "Unified backend for Amazon Seller Dashboard - SP-API and Advertising API integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "update-images": "node update-product-images-job.js",
    "update-images:all": "node update-product-images-job.js --all",
    "scheduler:images": "node src/schedulers/image-update-scheduler.js",
    "copilot:e2e": "node scripts/e2e/copilot.e2e.mjs",
    "mcp:setup": "node ../.mcp/setup.js",
    "mcp:token": "node ../.mcp/ml-token-helper.js",
    "mcp:token:generate": "node ../.mcp/ml-token-helper.js generate",
    "mcp:token:validate": "node ../.mcp/ml-token-helper.js validate",
    "mcp:install": "npm install -g mcp-remote && npm run mcp:setup"
  },
  "keywords": [
    "amazon",
    "sp-api",
    "advertising-api",
    "seller",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@copilotkit/runtime": "^1.10.3",
    "@copilotkit/shared": "^1.10.3",
    "@sp-api-sdk/common": "^2.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/date-fns": "^2.5.3",
    "amazon-sp-api": "^1.0.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "openai": "^4.104.0",
    "pg": "^8.11.3",
    "sharp": "^0.34.3",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
