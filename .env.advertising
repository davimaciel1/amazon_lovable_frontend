# Amazon Advertising API Configuration
# Copy this file to .env and fill with your actual credentials

# OAuth Credentials from Amazon Advertising Console
AMAZON_ADS_CLIENT_ID=amzn1.application-oa2-client.xxxxxxxxxxxxx
AMAZON_ADS_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Tokens obtained through OAuth flow
AMAZON_ADS_ACCESS_TOKEN=Atza|xxxxxxxxxxxxxxxxxxxxxxxxxxx
AMAZON_ADS_REFRESH_TOKEN=Atzr|xxxxxxxxxxxxxxxxxxxxxxxxxxx

# Advertising Profile ID (from Amazon Ads Console)
AMAZON_ADS_PROFILE_ID=1234567890

# Region (NA=North America, EU=Europe, FE=Far East)
AMAZON_ADS_REGION=NA

# API Configuration
AMAZON_ADS_API_VERSION=v3
AMAZON_ADS_SANDBOX_MODE=false

# Database Configuration for storing ACOS data
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app
DB_USER=app
DB_PASSWORD=
